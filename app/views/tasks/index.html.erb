<div class="wrapper">
  <div> <h1>Your Tasks</h1></div>
  <%= link_to "Create a new task", new_path %>

  <div class="container">
    <ul><% @tasks.each do |task|%>
      <li>
        <%= link_to task.name, task_path(task) %>
        <%= link_to "Edit", edit_task_path(task) %>
        <%= link_to "Delete", task_path(task), method: :delete,
      data: { confirm: "Are you sure?" } %>
      </li>
    <%end%>
    </ul>
  </div>

</div>

